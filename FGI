public class PlayerController : MonoBehaviour
{
    public float moveSpeed = 5f;
    public float rotationSpeed = 700f;
    public Camera playerCamera;

    void Update()
    {
        float h = Input.GetAxis("Horizontal");
        float v = Input.GetAxis("Vertical");
        Vector3 move = new Vector3(h, 0, v).normalized;

        transform.Translate(move * moveSpeed * Time.deltaTime, Space.World);

        if (move != Vector3.zero)
        {
            Quaternion toRotation = Quaternion.LookRotation(move, Vector3.up);
            transform.rotation = Quaternion.RotateTowards(transform.rotation, toRotation, rotationSpeed * Time.deltaTime);
        }
    }
}using UnityEngine;

public class Gun : MonoBehaviour
{
    public GameObject bulletPrefab;
    public Transform firePoint;
    public float fireRate = 0.2f;
    private float nextFire = 0f;

    void Update()
    {
        if (Input.GetButton("Fire1") && Time.time > nextFire)
        {
            nextFire = Time.time + fireRate;
            Shoot();
        }
    }

    void Shoot()
    {
        Instantiate(bulletPrefab, firePoint.position, firePoint.rotation);
        Debug.Log("Ø·Ù„Ù‚Ù†Ø§ ğŸ”«");
    }
}using UnityEngine;

public class PlayerHealth : MonoBehaviour
{
    public int maxHealth = 100;
    public int currentHealth;
    public bool isDown = false;

    void Start()
    {
        currentHealth = maxHealth;
    }

    public void TakeDamage(int dmg)
    {
        currentHealth -= dmg;
        if (currentHealth <= 0)
        {
            isDown = true;
            Debug.Log("Ø§Ù„Ù„Ø§Ø¹Ø¨ Ù†Ø²Ù„ - ÙŠØ­ØªØ§Ø¬ Ø¥Ù†Ø¹Ø§Ø´");
        }
    }

    public void RestoreHealth()
    {
        currentHealth = maxHealth;
        isDown = false;
        Debug.Log("ØªÙ… Ø§Ù„Ø¥Ù†Ø¹Ø§Ø´!");
    }
}using UnityEngine;

public class DropSelector : MonoBehaviour
{
    public GameObject mapUI;
    private bool isLeader = true;

    void Start()
    {
        if (isLeader)
        {
            mapUI.SetActive(true);
            Invoke("AutoDrop", 10f);
        }
    }

    public void ChooseDrop(Vector3 pos)
    {
        CancelInvoke();
        DropPlayer(pos);
    }

    void AutoDrop()
    {
        DropPlayer(new Vector3(50, 100, 50));
    }

    void DropPlayer(Vector3 pos)
    {
        mapUI.SetActive(false);
        transform.position = pos;
        Debug.Log("Ù†Ø²Ù„ Ø§Ù„Ù„Ø§Ø¹Ø¨ Ø¹Ù†Ø¯: " + pos);
    }
}using UnityEngine;

