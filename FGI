        return teammates.Contains(player);
    }
}public class CurrencySystem : MonoBehaviour
{
    public int riyals = 0;

    public void AddMoney(int amount)
    {
        riyals += amount;
    }

    public bool SpendMoney(int amount)
    {
        if (riyals >= amount)
        {
            riyals -= amount;
            return true;
        }
        return false;
    }
